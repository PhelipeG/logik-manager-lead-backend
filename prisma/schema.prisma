

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Lead {
  id             String    @id @default(cuid())
  name           String
  email          String
  phone          String
  position       String    // cargo
  birthDate      DateTime
  message        String
  
  utmSource      String?
  utmMedium      String?
  utmCampaign    String?
  utmTerm        String?
  utmContent     String?
  gclid          String?
  fbclid         String?
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@map("leads")
}